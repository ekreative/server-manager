{% extends '::base.html.twig' %}

{% block title %}Framework{% endblock %}

{% block header %}
    <div class="page-header">
        <h1>{{ block('title') }}
            <div class="pull-right">
                {{ form_start(delete_form, {'attr': {'delete_form': true}}) }}
                    {{ form_widget(delete_form.submit,{'attr':{'class':'btn-danger', 'onclick':'return confirm("Are you sure you want to delete?")'}}) }}
                {{ form_end(delete_form) }}
            </div>
            <div class="pull-right">
                <a href="{{ path('framework_edit', { 'id': entity.id }) }}" class="btn btn-default header-edit-btn">Edit</a>
            </div>
        </h1>
    </div>
{% endblock header %}

{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Current Version</th>
            <td>{{ entity.currentVersion }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
